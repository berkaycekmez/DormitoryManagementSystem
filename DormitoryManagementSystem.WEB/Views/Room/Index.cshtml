@model IEnumerable<Room>
<div class="card">
   <div class="card-header d-flex justify-content-between align-items-center">
       <h3>Odalar</h3>
        @if (User.IsInRole("Admin"))
        {
               <a asp-action="Create" class="btn btn-primary">Yeni Oda Ekle</a>
        }
   </div>
   <div class="card-body">
       <div class="mb-3">
           <form asp-action="Index" method="get" class="form-inline">
               <input type="text" name="search" class="form-control mr-2" placeholder="Oda numarası ara..." />
               <button type="submit" class="btn btn-outline-primary">Ara</button>
           </form>
       </div>
       <div class="table-responsive">
           <table class="table table-striped">
               <thead>
                   <tr>
                       <th>Oda No</th>
                       <th>Kat</th>
                       <th>Kapasite</th>
                       <th>Doluluk</th>
                       <th>Yurt</th>
                       <th>İşlemler</th>
                   </tr>
               </thead>
               <tbody>
                    @foreach (var room in Model)
                    {
                           <tr>
                               <td>@room.Number</td>
                               <td>@room.Floor</td>
                               <td>@room.Capacity</td>
                               <td>@room.CurrentCapacity/@room.Capacity</td>
                               <td>@room.Dormitory.DormitoryName</td>
                               <td>
                                   <a asp-action="Details" asp-route-id="@room.RoomID" class="btn btn-info btn-sm">Detay</a>
                                @if (User.IsInRole("Admin"))
                                {
                                           <a asp-action="Edit" asp-route-id="@room.RoomID" class="btn btn-warning btn-sm">Düzenle</a>
                                           <a asp-action="Delete" asp-route-id="@room.RoomID" class="btn btn-danger btn-sm">Sil</a>
                                }
                               </td>
                           </tr>
                    }
               </tbody>
           </table>
       </div>
   </div>
</div>