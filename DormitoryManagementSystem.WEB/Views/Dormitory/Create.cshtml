@model Dormitory
<div class="card">
    <div class="card-header">
        <h3>Yeni Yurt Ekle</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DormitoryName" class="control-label">Yurt Adı</label>
                        <input asp-for="DormitoryName" class="form-control" required />
                        <span asp-validation-for="DormitoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label">Adres</label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="control-label">Telefon</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DormitoryCapacity" class="control-label">Toplam Kapasite</label>
                        <input asp-for="DormitoryCapacity" class="form-control" type="number" min="1" required />
                        <span asp-validation-for="DormitoryCapacity" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="RoomCount" class="control-label">Oda Sayısı</label>
                        <input id="RoomCount" name="RoomCount" class="form-control" type="number" min="1" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DormitoryPhotoUrl" class="control-label">Fotoğraf</label>
                        <select asp-for="DormitoryPhotoUrl" class="form-control">
                            <option value="">Fotoğraf Seçin</option>
                            @foreach (var image in ViewBag.Images)
                            {
                                <option value="@image">@image.Replace("/images/", "")</option>
                            }
                        </select>
                        <span asp-validation-for="DormitoryPhotoUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
<style>
    .col-md-6 {
        padding: 1rem;
    }

    .form-group textarea {
        resize: vertical;
        min-height: 100px;
    }

    .photo-preview-container {
        margin-top: 1rem;
        background: #f8fafc;
        border-radius: 8px;
        padding: 1rem;
    }

    /* Buton stilleri */
    .btn {
        padding: 0.5rem 1.5rem;
        margin-right: 10px;
    }

    .btn-primary {
        background: #2563eb;
        border: none;
    }

        .btn-primary:hover {
            background: #1d4ed8;
        }

    .btn-secondary {
        background: #6b7280;
        border: none;
    }

        .btn-secondary:hover {
            background: #4b5563;
        }
</style>