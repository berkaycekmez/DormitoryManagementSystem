@model Dormitory

<div class="card">
    <div class="card-header">
        <h3>Yeni Yurt Ekle</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DormitoryName" class="control-label">Yurt Adı</label>
                        <input asp-for="DormitoryName" class="form-control" required />
                        <span asp-validation-for="DormitoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label">Adres</label>
                        <textarea asp-for="Address" class="form-control" rows="3" ></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="control-label">Telefon</label>
                        <input asp-for="Phone" class="form-control"  />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DormitoryCapacity" class="control-label">Toplam Kapasite</label>
                        <input asp-for="DormitoryCapacity" class="form-control" type="number" min="1" required />
                        <span asp-validation-for="DormitoryCapacity" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DormitoryPhotoUrl" class="control-label">Fotoğraf URL</label>
                        <input asp-for="DormitoryPhotoUrl" class="form-control" required />
                        <span asp-validation-for="DormitoryPhotoUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

