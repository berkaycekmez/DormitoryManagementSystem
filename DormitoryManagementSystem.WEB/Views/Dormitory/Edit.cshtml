@model Dormitory

<div class="card">
    <div class="card-header">
        <h3>Yurt Düzenle</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="DormitoryID" />

             <div class="form-group mb-3">
                <label asp-for="DormitoryPhotoUrl" class="control-label">Fotoğraf</label>
                <select asp-for="DormitoryPhotoUrl" class="form-control">
                    <option value="">Fotoğraf Seçin</option>
                    @foreach (var image in ViewBag.Images)
                    {
                        <option value="@image">@image.Replace("/images/", "")</option>
                    } 
            </select> 
                 <span asp-validation-for="DormitoryPhotoUrl" class="text-danger"></span> 
            </div>
            <div class="form-group mb-3">
                <label asp-for="DormitoryName" class="control-label">Yurt Adı</label>
                <input asp-for="DormitoryName" class="form-control" />
                <span asp-validation-for="DormitoryName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label">Adres</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DormitoryCapacity" class="control-label">Kapasite</label>
                <input asp-for="DormitoryCapacity" class="form-control" />
                <span asp-validation-for="DormitoryCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
            <label asp-for="DormitoryCurrentCapacity" type="hidden" value="@ViewBag.cap " />
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>
    .form-group select {
        appearance: none;
        background-image: url("data:image/svg+xml,...");
        background-repeat: no-repeat;
        background-position: right 1rem center;
    }

    .image-preview {
        width: 100px;
        height: 100px;
        border-radius: 8px;
        object-fit: cover;
        margin-top: 0.5rem;
    }</style>