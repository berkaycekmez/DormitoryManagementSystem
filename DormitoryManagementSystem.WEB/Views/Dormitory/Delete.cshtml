@model Dormitory

<div class="card">
    <div class="card-header">
        <h3>Yurt Silme Onayı</h3>
    </div>
    <div class="card-body">
        <h4>Bu yurdu silmek istediğinize emin misiniz?</h4>

        <dl class="row">
            <dt class="col-sm-3">Yurt Adı</dt>
            <dd class="col-sm-9">@Model.DormitoryName</dd>

            <dt class="col-sm-3">Adres</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Telefon</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Kapasite</dt>
            <dd class="col-sm-9">@Model.DormitoryCapacity</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="DormitoryID" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>

<style>
    .delete-warning {
        background: #fee2e2;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #991b1b;
    }

    .dormitory-info {
        background: #f8fafc;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }</style>