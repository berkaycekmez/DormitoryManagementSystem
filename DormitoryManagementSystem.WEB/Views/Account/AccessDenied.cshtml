@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="text-center">
    <h1 class="display-4 text-danger">Erişim Reddedildi</h1>
    <p>Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ana Sayfaya Dön</a>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Giriş Yap</a>
        }
    </div>
</div>