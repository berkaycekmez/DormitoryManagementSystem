@{
    ViewData["Title"] = "Admin Panel";
}
<style>
    .admin-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-top: 2rem;
    }

    .admin-title {
        text-align: center;
        color: #1e3a8a;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .admin-card {
        background: white;
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
        text-align: center;
        padding: 2rem 1rem;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .admin-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

        .admin-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #1e3a8a, #1e40af);
            opacity: 0;
            transition: all 0.3s ease;
            z-index: 1;
        }

        .admin-card:hover::before {
            opacity: 0.1;
        }

        .admin-card .card-body {
            position: relative;
            z-index: 2;
        }

        .admin-card .card-title {
            color: #1e3a8a;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .admin-card .card-text {
            color: #4b5563;
            margin-bottom: 1.5rem;
        }

        .admin-card .btn {
            background: linear-gradient(135deg, #1e3a8a, #1e40af);
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
            transform: translateY(0);
        }

            .admin-card .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(30, 58, 138, 0.3);
            }
</style>

@{
    ViewData["Title"] = "Admin Panel";
}
<div class="admin-container">
    <h2 class="admin-title">Admin Paneli</h2>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4 mb-4">
            <div class="admin-card">
                <div class="card-body">
                    <h5 class="card-title">Yurt Yönetimi</h5>
                    <p class="card-text">Yurt ekle, düzenle, sil</p>
                    <a asp-controller="Dormitory" asp-action="Index" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="admin-card">
                <div class="card-body">
                    <h5 class="card-title">Öğrenci Yönetimi</h5>
                    <p class="card-text">Öğrenci ekle, düzenle, sil</p>
                    <a asp-controller="Student" asp-action="Index" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="admin-card">
                <div class="card-body">
                    <h5 class="card-title">Oda Yönetimi</h5>
                    <p class="card-text">Oda ekle, düzenle, sil</p>
                    <a asp-controller="Room" asp-action="Index" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>
    </div>
</div>