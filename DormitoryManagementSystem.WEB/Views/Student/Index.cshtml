@model IEnumerable<Student>
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Öğrenciler</h3>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Yeni Öğrenci Ekle</a>
        }
    </div>
    <div class="card-body">
        <div class="mb-3">
            <form asp-action="Index" method="get" class="form-inline">
                <input type="text" name="search" class="form-control mr-2" placeholder="Öğrenci ara..." />
                <button type="submit" class="btn btn-outline-primary">Ara</button>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Fotoğraf</th>
                        <th>Ad Soyad</th>
                        <th>Telefon</th>
                        <th>Oda No</th>
                        <th>Yurt</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                <img src="@student.PhotoUrl" alt="@student.FirstName" style="width: 50px; height: 50px; border-radius: 50%;" />
                            </td>
                            <td>@student.FirstName @student.LastName</td>
                            <td>@student.Phone</td>
                            <td>@student.Room.Number</td>
                            <td>@student.Room.Dormitory.DormitoryName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-info btn-sm">Detay</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-warning btn-sm">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger btn-sm">Sil</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    </div>
